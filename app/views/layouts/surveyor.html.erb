<!DOCTYPE html>
<html>
<head>
  <title>Gay Men's Health Survey</title>
  <%= 
    #stylesheet_link_tag    "application", :media => "all"
  %>
  <style>
    .field_with_errors {
       border:2px solid;
       background-color: pink;
       border-color: pink;
    }
    table {
      border-collapse: collapse;
    }
    table, td, th {
      border: none;
    }

  </style>
  <%= javascript_include_tag "application" %>
  <script>
     $(document).ready(function() {
        $("input[name='response\\[binge_drink_yearly\\]']").change(function() {
          console.log($("input[name='response\\[binge_drink_yearly\\]']:checked").val());
          if ($("input[name='response\\[binge_drink_yearly\\]']:checked").val() == 'Never in the last year') {
              $("#qs_binge_drinking").hide();
          }
          else {
              $("#qs_binge_drinking").show();
          }
        });
     });
  </script>
  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>
<body>

  <%= render "shared/load_facebook_sdk" %>

  <%= yield %>

</body>
</html>
